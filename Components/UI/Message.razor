
<div class="alert @CssClass border border-1 border-dark">
    <h4>@Title</h4>
    <div>@DisplayMessage</div>
</div>

@code {

    /// <summary>
    /// The message to display in the message box 
    /// </summary>
    [Parameter, EditorRequired]
    public string DisplayMessage { get; set; } = string.Empty;


    /// <summary>
    /// The titile to display the message box
    /// </summary>
    [Parameter]
    public string Title { get; set; } = string.Empty;

    /// <summary>
    /// The CSS class to display the message box. Defaults alert-success. use bootstrap css
    /// </summary>
    [Parameter]
    public string CssClass { get; set; } = "alert-success";
}
