@page "/reverseastring"

<PageTitle>Reverse A String</PageTitle>

<h3>Reverse A String</h3>

<div class="vstack gap-3 col-md-6">
    <InputText class="form-control" placeholder="Enter a string to reverse" @bind-Value="message" />
    <div class="text-end">
        <button class="btn btn-primary" @onclick="ReverseMe">Reverse Me</button>
    </div>

    <hr />

    @if (reversedMessage != "")
    {
        @if (IsPalindrome)
        {
            <Message DisplayMessage="@displayMessage" Title="The message is palindrome" CssClass="alert-success"></Message>
        }
        else
        {
            <Message DisplayMessage="@displayMessage" Title="The message is not palindrome" CssClass="alert-danger"></Message>
        }
    }

</div>

@code {
    private string message = "Reverse Me";
    private string reversedMessage = "";
    private string displayMessage = "";
    private bool IsPalindrome = false;

    private void ReverseMe()
    {
        reversedMessage = "";
        for (var i = message.Length - 1; i >= 0; i--)
        {
            reversedMessage += message[i];
        }

        if (message.Equals(reversedMessage))
        {
            IsPalindrome = true;
        }
        else
        {
            IsPalindrome = false;
        }


        displayMessage = $"The reverse of {message} is {reversedMessage}";
    }
}
